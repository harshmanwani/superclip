{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "ClipSync",
  "version": "0.2.0",
  "identifier": "com.adeelabs.clipsync",
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "ClipSync",
        "width": 350,
        "height": 500,
        "decorations": false,
        "transparent": true,
        "visible": false
      },
      {
        "label": "settings",
        "title": "Settings",
        "url": "settings.html",
        "width": 600,
        "height": 400,
        "resizable": true,
        "decorations": true,
        "visible": false,
        "closable": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  }
}
